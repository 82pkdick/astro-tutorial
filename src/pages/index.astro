import "../styles/global.css";

const pageTitle = "私のAstroサイト";
const titleColor = "maroon";
const titleSize = "3.5rem";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ titleColor, titleSize }}>
      h1 {
        color: var(--titleColor);
        font-size: var(--titleSize);
      }
    </style>
  </head>
  <body>
    <a href="/">ホーム</a>
    <a href="/about/">概要</a>
    <a href="/blog/">ブログ</a>

    <h1>{pageTitle}</h1>
  </body>
</html>
